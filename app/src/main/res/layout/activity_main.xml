<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/Toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="@string/app_name" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:padding="@dimen/space_16dp">

                <!-- Pan -->
                <TextView
                    android:id="@+id/pan_label"
                    style="@style/CardLabelText"
                    android:text="@string/pan"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/brand_name"
                    style="@style/CardBrandText"
                    android:layout_marginStart="@dimen/space_8dp"
                    app:layout_constraintStart_toEndOf="@id/pan_label"
                    app:layout_constraintTop_toTopOf="@id/pan_label"
                    tools:text="Visa" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/pan"
                    style="@style/CardTextInput"
                    android:layout_marginTop="@dimen/space_8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/pan_label">

                    <EditText
                        style="@style/CardEditText.Number"
                        android:autofillHints="creditCardNumber"
                        android:hint="@string/pan_hint"
                        android:maxLength="19" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Name -->
                <TextView
                    android:id="@+id/name_label"
                    style="@style/CardLabelText"
                    android:layout_marginTop="@dimen/space_16dp"
                    android:text="@string/holder_name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/pan" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/name"
                    style="@style/CardTextInput"
                    android:layout_marginTop="@dimen/space_8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/name_label">

                    <EditText
                        style="@style/CardEditText"
                        android:hint="@string/holder_name_hint"
                        android:inputType="textPersonName"
                        android:textAllCaps="true" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Expiry -->
                <TextView
                    android:id="@+id/expiry_label"
                    style="@style/CardLabelText"
                    android:layout_marginTop="@dimen/space_16dp"
                    android:text="@string/expiry_month_year"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/name" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/expiry_month"
                    style="@style/CardTextInput"
                    android:layout_width="50dp"
                    android:layout_marginTop="@dimen/space_8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/expiry_label">

                    <EditText
                        style="@style/CardEditText.Number"
                        android:autofillHints="creditCardExpirationMonth"
                        android:gravity="center"
                        android:hint="@string/expiry_month_hint"
                        android:maxLength="2" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/expiry_year"
                    style="@style/CardTextInput"
                    android:layout_width="50dp"
                    android:layout_marginStart="@dimen/space_8dp"
                    android:layout_marginTop="@dimen/space_8dp"
                    app:layout_constraintStart_toEndOf="@id/expiry_month"
                    app:layout_constraintTop_toBottomOf="@id/expiry_label">

                    <EditText
                        style="@style/CardEditText.Number"
                        android:autofillHints="creditCardExpirationYear"
                        android:gravity="center"
                        android:hint="@string/expiry_year_hint"
                        android:maxLength="2" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Cvv2 -->
                <TextView
                    android:id="@+id/cvv2_label"
                    style="@style/CardLabelText"
                    android:layout_marginTop="@dimen/space_16dp"
                    android:text="@string/cvv2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/expiry_month" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/cvv2"
                    style="@style/CardTextInput"
                    android:layout_width="60dp"
                    android:layout_marginTop="@dimen/space_8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cvv2_label">

                    <EditText
                        style="@style/CardEditText.Number"
                        android:autofillHints="creditCardSecurityCode"
                        android:gravity="center"
                        android:hint="@string/cvv2_hint"
                        android:maxLength="4" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_16dp"
                    android:padding="@dimen/space_12dp"
                    android:text="@string/check"
                    app:cornerRadius="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cvv2" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>